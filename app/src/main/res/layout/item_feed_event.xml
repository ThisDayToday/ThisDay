<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:context=".FeedEvent">

    <ImageView
        android:id="@+id/ivFeedImage"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/tvFeedName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="@string/event_name" />

        <TextView
            android:id="@+id/tvFeedType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="VirtualEvent" />

        <TextView
            android:id="@+id/tvFeedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="9/17/21" />

        <TextView
            android:id="@+id/tvFeedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="3:00pm - 6:00pm PST" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/going"
            android:textSize="16dp" />

        <CheckBox
            android:id="@+id/cbGoing"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:gravity="right"
            android:textAlignment="textStart" />
    </LinearLayout>

</LinearLayout>